<controls:PosBaseWindow x:Class="CanDao.Pos.UI.MainView.View.RestaurantOpeningWindow"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:controls="clr-namespace:CanDao.Pos.Common.Controls;assembly=CanDao.Pos.Common"
                        Height="440" Width="650" CloseBtnText="开业大吉" CloseBtnEnable="False">
    <controls:PosBaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDao.Pos.Common;component/BaseDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:PosBaseWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="{StaticResource CanDaoPosImageLog1}"/>
        <TextBlock Grid.Row="1" Text="{Binding DateTimeNow, StringFormat=今日：{0}}" FontSize="30" FontWeight="Bold"/>
        <TextBlock Grid.Row="2" Text="恭祝：财源滚滚，生意兴隆" FontSize="30" FontWeight="Bold"/>
        <Button Grid.Row="3" Content="开业" Command="{Binding ConfirmCmd}" VerticalAlignment="Center" FontSize="25" Height="60" Width="150"/>
    </Grid>
</controls:PosBaseWindow>
