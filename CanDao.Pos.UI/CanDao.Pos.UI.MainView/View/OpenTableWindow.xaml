<controls:PosBaseWindow x:Class="CanDao.Pos.UI.MainView.View.OpenTableWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:CanDao.Pos.UI.Utility.View;assembly=CanDao.Pos.UI.Utility"
             xmlns:controls="clr-namespace:CanDao.Pos.Common.Controls;assembly=CanDao.Pos.Common"
             xmlns:toolkit="clr-namespace:Engine.Wpf.Toolkit;assembly=Engine.Wpf.Toolkit"
             Width="650" CloseBtnText="餐台开台" CloseBtnEnable="False" ShowInTaskbar="False" SizeToContent="Height" MaxHeight="768">
    <controls:PosBaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDao.Pos.Common;component/BaseDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:PosBaseWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Margin="85,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="服务员编号：" />
            <toolkit:WatermarkTextBox Grid.Row="0" Grid.Column="1" Text="{Binding WaiterId}" Watermark="服务员编号：" VerticalContentAlignment="Center" Height="30" Margin="0,10"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="桌号："/>
            <toolkit:WatermarkTextBox Grid.Row="1" Grid.Column="1" Text="{Binding TableName}" IsEnabled="False" VerticalContentAlignment="Center" Height="30" Margin="0,10"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="就餐人数（男）："/>
            <toolkit:WatermarkTextBox Grid.Row="2" Grid.Column="1" Text="{Binding MaleCustomer, UpdateSourceTrigger=PropertyChanged}" Watermark="就餐人数（男）：" VerticalContentAlignment="Center" Height="30" Margin="0,10"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="就餐人数（女）："/>
            <toolkit:WatermarkTextBox Grid.Row="3" Grid.Column="1" Text="{Binding FemaleCustomer, UpdateSourceTrigger=PropertyChanged}" Watermark="就餐人数（女）：" VerticalContentAlignment="Center" Height="30" Margin="0,10"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="餐具："/>
            <toolkit:WatermarkTextBox Grid.Row="4" Grid.Column="1" Text="{Binding DinnerWareCount}" Visibility="{Binding IsDinnerWareEnable, Converter={StaticResource Bool2VisibilityCvt}}" VerticalContentAlignment="Center" Height="30" Margin="0,10"/>
        </Grid>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ToggleButton Content="儿童" Style="{StaticResource DietTogBtnStyle}" FontSize="20" Margin="3" IsChecked="{Binding HasChild}"/>
            <ToggleButton Grid.Row="0" Grid.Column="1" Content="青年" Style="{StaticResource DietTogBtnStyle}" FontSize="20"  Margin="3" IsChecked="{Binding HasYoung}"/>
            <ToggleButton Grid.Row="1" Grid.Column="0" Content="中年" Style="{StaticResource DietTogBtnStyle}" FontSize="20"  Margin="3" IsChecked="{Binding HasMiddleAge}"/>
            <ToggleButton Grid.Row="1" Grid.Column="1" Content="老年" Style="{StaticResource DietTogBtnStyle}" FontSize="20"  Margin="3" IsChecked="{Binding HasOld}"/>
            <Button Content="确认开台" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding ConfirmCmd}"/>
            <Button Content="取消" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding CancelCmd}"/>

            <view:InputNumberControl Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Width="260" Height="260"/>
        </Grid>

    </Grid>
</controls:PosBaseWindow>
