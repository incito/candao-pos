<UserControl x:Class="CanDao.Pos.UI.Utility.View.WindowButtonOperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDao.Pos.Common;component/BaseDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <dxlc:LayoutGroup Orientation="Horizontal" Margin="10">
        <dxe:ButtonEdit Width="150" Height="45" HorizontalAlignment="Stretch" FontSize="20" >
            <dxe:ButtonInfo Content="确定" Command="{Binding ConfirmCmd}"/>
        </dxe:ButtonEdit>
        <dxe:ButtonEdit Width="150" Height="45" HorizontalAlignment="Stretch" FontSize="20" Margin="10,0,0,0">
            <dxe:ButtonInfo Content="取消" Command="{Binding CancelCmd}"/>
        </dxe:ButtonEdit>
    </dxlc:LayoutGroup>
</UserControl>
