<dx:DXWindow x:Class="CanDao.Pos.UI.Utility.View.SetDishTasteAndDietWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:view="clr-namespace:CanDao.Pos.UI.Utility.View"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:controls="clr-namespace:CanDao.Pos.UI.Utility.Controls"
             Width="750" SizeToContent="Height"
             WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <dx:DXWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDao.Pos.Common;component/BaseDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </dx:DXWindow.Resources>

    <dxlc:LayoutControl Orientation="Vertical" Padding="0" ScrollBars="None">
        <view:WindowTitleOperControl VerticalAlignment="Top"/>

        <dxlc:LayoutGroup Orientation="Vertical">
            <dxlc:LayoutGroup Orientation="Horizontal" VerticalAlignment="Top" Margin="10,0">
                <TextBlock Text="{Binding DishInfo.DishName}" FontSize="18" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding DishInfo.DishPrice, StringFormat={}{0}元}" FontSize="18" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,30,0">
                    <Button Command="{Binding SetDishNumCmd}" Margin="3" Style="{StaticResource SelectNumBtnStyle}"/>
                    <Button Command="{Binding DishNumSubCmd}" Margin="3" Style="{StaticResource ReduceBtnStyle}"/>
                    <dxe:TextEdit IsEnabled="False" Text="{Binding DishNum}" Width="60" FontSize="18"/>
                    <TextBlock Text="{Binding DishInfo.DishUnit}" VerticalAlignment="Center"/>
                    <Button Command="{Binding DishNumAddCmd}" Margin="3" Style="{StaticResource AddBtnStyle}"/>
                </StackPanel>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Vertical" Margin="10,0" Visibility="{Binding HasTasteInfos, Converter={StaticResource Bool2VisibilityCvt}}">
                <view:TasteSetControl x:Name="TasteSetCtrl"/>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Vertical" Margin="10,0">
                <controls:DietSetControl x:Name="DietSetCtrl"/>
            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>

        <view:WindowButtonOperControl HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </dxlc:LayoutControl>
</dx:DXWindow>
