<UserControl x:Class="CanDao.Pos.UI.Utility.View.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:com="clr-namespace:CanDao.Pos.Common;assembly=CanDao.Pos.Common"
             Background="Azure">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="3,0">
            <TextBlock Text="店铺编号："/>
            <TextBlock Text="{Binding BranchId, Source={x:Static com:Globals.BranchInfo}}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="3,0">
            <TextBlock Text="登录员工："/>
            <TextBlock Text="{Binding FullName, Source={x:Static com:Globals.UserInfo}}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="3,0">
            <TextBlock Text="当前时间："/>
            <TextBlock Text="{Binding CurrentTime, StringFormat=yyyy-MM-dd HH:mm:ss}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="3,0">
            <TextBlock Text="程序版本："/>
            <TextBlock Text="{Binding Version}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
