<UserControl x:Class="CanDao.Pos.UI.Utility.View.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:com="clr-namespace:CanDao.Pos.Common;assembly=CanDao.Pos.Common"
             Background="Azure">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <dxlc:LayoutItem Label="店铺编号：" Margin="3,0">
            <TextBlock Text="{Binding BranchId, Source={x:Static com:Globals.BranchInfo}}"/>
        </dxlc:LayoutItem>
        <dxlc:LayoutItem Label="登录员工：" Margin="3,0">
            <TextBlock Text="{Binding FullName, Source={x:Static com:Globals.UserInfo}}"/>
        </dxlc:LayoutItem>
        <dxlc:LayoutItem Label="当前时间：" HorizontalAlignment="Right" Margin="3,0">
            <TextBlock Text="{Binding CurrentTime, StringFormat=yyyy-MM-dd HH:mm:ss}"/>
        </dxlc:LayoutItem>
        <dxlc:LayoutItem Label="程序版本：" Margin="3,0">
            <TextBlock Text="{Binding Version}"/>
        </dxlc:LayoutItem>
    </StackPanel>
</UserControl>
