<controls:PosMsgWindow x:Class="CanDao.Pos.UI.Utility.View.CashboxPasswordInputWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:controls="clr-namespace:CanDao.Pos.Common.Controls;assembly=CanDao.Pos.Common"
                       xmlns:view="clr-namespace:CanDao.Pos.UI.Utility.View"
                       Title="钱箱密码验证" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:WatermarkPasswordBox x:Name="PbBox"
                                       Watermark="钱箱密码："
                                       Password="{Binding CashPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                       Height="48" Width="300" Margin="10,5"
                                       VerticalContentAlignment="Center" HorizontalAlignment="Center"/>

        <view:InputNumberControl Grid.Row="1"
                                 HorizontalAlignment="Center"/>

        <view:WindowButtonOperControl Grid.Row="2" Margin="15,0"/>
    </Grid>
</controls:PosMsgWindow>
