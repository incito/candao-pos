<UserControl x:Class="CanDaoCD.Pos.Common.Controls.CSystem.CtlDigitalKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cSystem="clr-namespace:CanDaoCD.Pos.Common.Controls.CSystem">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDaoCD.Pos.ResourceService;component/DictionaryServer.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <cSystem:DigitalInputKeyboardVm/>
    </UserControl.DataContext>
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource ColBtn}">
                <Setter Property="MinWidth" Value="60"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="MinHeight" Value="60"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="1" Grid.Row="0" Grid.Column="0" Command="{Binding InputCmd}" CommandParameter="1"/>
        <Button Content="2" Grid.Row="0" Grid.Column="1" Command="{Binding InputCmd}" CommandParameter="2" />
        <Button Content="3" Grid.Row="0" Grid.Column="2" Command="{Binding InputCmd}" CommandParameter="3" />
        <Button Content="4" Grid.Row="1" Grid.Column="0" Command="{Binding InputCmd}" CommandParameter="4"/>
        <Button Content="5" Grid.Row="1" Grid.Column="1" Command="{Binding InputCmd}" CommandParameter="5"/>
        <Button Content="6" Grid.Row="1" Grid.Column="2" Command="{Binding InputCmd}" CommandParameter="6"/>
        <Button Content="7" Grid.Row="2" Grid.Column="0" Command="{Binding InputCmd}" CommandParameter="7"/>
        <Button Content="8" Grid.Row="2" Grid.Column="1" Command="{Binding InputCmd}" CommandParameter="8"/>
        <Button Content="9" Grid.Row="2" Grid.Column="2" Command="{Binding InputCmd}" CommandParameter="9"/>
        <Button Content="00" Grid.Row="3" Grid.Column="0"  Command="{Binding InputCmd}" CommandParameter="00"/>
        <Button Content="0" Grid.Row="3" Grid.Column="1" Command="{Binding InputCmd}" CommandParameter="0"/>
        <Button Content="." Grid.Row="3" Grid.Column="2" Command="{Binding InputCmd}" CommandParameter="."/>
        <Button Content="&lt;-" Grid.Row="0" Grid.Column="3" Command="{Binding InputCmd}" CommandParameter="Back"/>
        <Button Content="确定" Grid.Row="1" Grid.RowSpan="3" Grid.Column="3" Command="{Binding InputCmd}" CommandParameter="Enter" Height="183"/>
    </Grid>
</UserControl>
