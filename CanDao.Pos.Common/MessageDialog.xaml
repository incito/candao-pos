<controls:PosBaseWindow x:Class="CanDao.Pos.Common.MessageDialog"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:controls="clr-namespace:CanDao.Pos.Common.Controls"
                        Height="290" Width="490" CloseBtnText="关闭"
                        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False" WindowCornerRadius="5"
                        KeyDown="MessageDialog_OnKeyDown">
    <controls:PosBaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDao.Pos.Common;component/BaseDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:PosBaseWindow.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="BtnConfirm" Content="确定" Click="ButtonConfirm_Click" Width="80" Height="30" Margin="10,0"/>
            <Button x:Name="BtnCancel" Content="取消" Click="ButtonCancel_OnClick" Width="80" Height="30" Margin="10,0"/>
        </StackPanel>
        <TextBlock MaxWidth="440" Text="{Binding InfoMsg}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="15,15,0,0"/>
    </DockPanel>
</controls:PosBaseWindow>
