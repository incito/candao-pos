<controls:PosMsgWindow x:Class="CanDao.Pos.Common.MessageDialog"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:controls="clr-namespace:CanDao.Pos.Common.Controls"
                        Height="300" Width="490"
                        WindowStartupLocation="CenterOwner" WindowCornerRadius="5"
                       Loaded="MessageDialog_OnLoaded">
    <controls:PosMsgWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CanDao.Pos.Common;component/BaseDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:PosMsgWindow.Resources>
    <DockPanel>
        <TextBlock MaxWidth="450" Text="{Binding InfoMsg}" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Margin="15,15,0,0"/>
    </DockPanel>
</controls:PosMsgWindow>
