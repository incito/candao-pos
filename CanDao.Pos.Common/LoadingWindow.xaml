<Window x:Class="CanDao.Pos.Common.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="150" Width="200"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False"
        Opacity="0.8" AllowsTransparency="True">
    <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" CornerRadius="5">
        <TextBlock Text="{Binding InfoMsg}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20"/>
    </Border>
</Window>
