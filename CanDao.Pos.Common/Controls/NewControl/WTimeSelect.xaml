        <Button x:Name="BtnSure" Style="{DynamicResource ColBtn}" Grid.Row="2" Width="205" HorizontalAlignment="Right" Content="确定" Background="White" IsDefault="True" PreviewMouseDown="BtnSure_OnPreviewMouseDown"></Button>
    </Grid>
</Window>

